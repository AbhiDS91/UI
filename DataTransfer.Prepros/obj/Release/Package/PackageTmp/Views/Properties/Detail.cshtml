@model DataTransfer.Prepros.Models.PropertyImages
@{
    ViewBag.Title = Model.PropertyCode + " Ranked";
    int count = 1;
}

<div class="main-wraper">
    <div class="container">
        <div class="iner-wrapper">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="main-heading text-white">@Model.PropertyCode.ToUpper() Ranked</h2>
                    <span class="back-arrow">
                        <a href="@Url.Action("Code", "Properties", new { code = Model.PropertyCode.ToUpper() })">
                            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                        </a>
                    </span>
                </div>
            </div>
            <div class="home-scroll-div custom-scroll">
                <div class="side-scroll-ranked custom-scroll">
                    @foreach (var property in Model.Images.Distinct())
                    {
                        if (count % 2 != 0)
                        {
                            @:<div class="row m-0">
                            }
                            <div class="col-lg-6">
                                <div class="gray-box">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <img src="~/Content/Properties/@($"{property.PropertyCode}/{property.ImageID}.JPG")" alt="@property.PropertyCode" onerror="this.onerror=null;this.src='/Content/Images/no-image.PNG';" class="w-100" />
                                        </div>
                                        <div class="col-sn-8 align-self-center">
                                            <div class="ranked-text">
                                                <h4>@property.CategoryName</h4>
                                                <p>@property.ImageID</p>
                                                <h3>@property.RankingScore</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            if (count % 2 == 0)
                            {
                            @:</div>
                        }
                        count += 1;
                    }
                    @if (Model.Images.Count() == 0)
                    {
                        <b>No Records Available.</b>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

