@model IEnumerable<DataTransfer.Prepros.Models.Properties>

@{
    ViewBag.Title = "Property Codes";
}

<div class="main-wraper">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="main-heading text-white">Hotel Properties</h2>
            </div>
        </div>
        <div class="home-scroll custom-scroll">
            <div class="row h-100">
                <div class="col-md-12 h-100">
                    <h3 class="sub-heading text-center"><span>Property <b>Code</b></span></h3>
                    <ul class="list-unstyled code-list mb-0 mt-5">
                        @foreach (var propertyCode in Model.Select(x => x.PropertyCode).Distinct())
                        {
                            <li>
                                <a href="@Url.Action("Code", "Properties", new { code = propertyCode})">
                                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                    @propertyCode.ToUpper()
                                </a>
                            </li>
                        }
                        @if (Model.Count() == 0)
                        {
                            <li>No Records Available.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>